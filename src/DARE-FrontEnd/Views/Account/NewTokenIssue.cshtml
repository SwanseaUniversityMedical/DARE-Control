@using System.Security.Claims
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "API Token";
}
<script>
    new ClipboardJS('.copy-btn');
</script>
<div class="container-lg mt-4 p-4 bg-white border-1 shadow-sm">
    <h1 class="fs-3 mb-0">API Token</h1>
    <hr class="d-flex my-4">

            <div class="d-flex align-items-center justify-content-between mb-4">
                <div>
                    <h2 class="fs-5">Current Access Token</h2>
                    <p class="mb-0">Expires: @ViewBag.TokenExpiryDate</p>
                </div>
                <div class="d-flex align-items-center">
                    <a tabindex="0" class="copy-btn btn btn-link btn-sm me-2" role="button" data-toggle="tooltip" data-trigger="focus" data-placement="top" title="Copied" data-clipboard-target="#api-token">
                        <i class=" mr-2"></i><span>Copy to clipboard</span>
                    </a>
           
                    <a asp-controller="Account" asp-action="NewTokenIssue" class="btn btn-primary btn-sm">
                        Renew My Token
                    </a>
                </div>
            </div>
            
            <code id="api-token">@ViewBag.AccessToken</code>
            
  
</div>
