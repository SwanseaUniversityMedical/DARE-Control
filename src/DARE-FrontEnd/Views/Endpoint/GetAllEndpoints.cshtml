@model List<BL.Models.Endpoint>
@{
    ViewData["Title"] = "Endpoint List";
    var endpointsCount = Model.Count;


}
<style>
    .box {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background-color: gray;
        border: 1px solid #ccc;
        border-radius: 50%;
        padding: 10px;
    }

    .space {
        margin-right: 2em;
    }
</style>
<div class="">
    <div class="d-flex align-items-center justify-content-between">
        <h1 class="g-font-size-28 my-2">TREs</h1>
        <a asp-controller="Endpoint" asp-action="AddEndpoint" class="btn btn-xl u-btn-secondary g-font-size-default">
            <i class="hs-admin-plus align-middle mr-2 g-font-weight-600"></i>
            <span>Create New Endpoint</span>
        </a>
    </div>
    <hr class="d-flex g-brd-gray-light-v7 mt-4 g-mb-30">
</div>

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead>
        <td>
            Showing @endpointsCount results

        </td>
        </thead>
        @foreach (var endpoint in Model)
        {
            <tr>
                <td>


                    <b>
                        <a href="@Url.Action("GetAnEndpoint", "Endpoint", new { id = endpoint.Id })">@endpoint.Name</a>
                    </b>
                    <br>
                    @*<br>@endpoint.location*@

                    <br>
                    <div class="box">
                        Used By @endpoint.Projects.Count Projects
                    </div>
                    <div class="box">
                        Ran @*@endpoint.Queries*@ Queries
                    </div>



                </td>
            </tr>
        }
    </table>

</div>