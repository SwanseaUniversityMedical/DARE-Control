@model List<BL.Models.User>
@{
    ViewData["Title"] = "User List";
}
<div class="">
    <div class="d-flex align-items-center justify-content-between">
        <h1 class="g-font-size-28 my-2">Users</h1>
        <a asp-controller="User" asp-action="AddUserForm" class="btn btn-xl u-btn-secondary g-font-size-default">
            <i class="hs-admin-plus align-middle mr-2 g-font-weight-600"></i>
            <span>Create New Usert</span>
        </a>
    </div>
    <hr class="d-flex g-brd-gray-light-v7 mt-4 g-mb-30">
</div>

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead>
        <th>User Name</th>

        <th>Users on Project</th>
        </thead>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>
                    <table>

                        @foreach (var project in user.Projects)
                        {
                            <tr>
                                <td>
                                    @project.Name
                                </td>
                            </tr>
                        }
                    </table>
                </td>
            </tr>
        }
    </table>

</div>