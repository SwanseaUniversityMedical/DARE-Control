<div class="d-flex align-items-center justify-content-between">
    <div>
        <h1 class="fs-3 mb-0">@Model.ProjectName</h1>
        <p class="font-monospace text-muted small mb-0">#@Model.ProjectId</p>
    </div>
</div>
<div class="mt-4">
    <ul class="nav nav-underline border-bottom" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <a href="/Project/GetProject/@Model.ProjectId#about" class="nav-link text-dark">About</a>
        </li>
        <li class="nav-item" role="presentation">
            <a href="/Project/GetProject/@Model.ProjectId#submissions" class="nav-link text-dark active">
                <div class="d-flex justify-content-between align-items-center">
                    <span>Submissions</span>
                    <span class="badge bg-dark-blue rounded-pill ms-2">@Model.Submissions.Count</span>
                </div>
            </a>
        </li>
        <li class="nav-item" role="presentation">
            <a href="/Project/GetProject/@Model.ProjectId#people" class="nav-link text-dark">
                <div class="d-flex justify-content-between align-items-center">
                    <span>People</span>
                    <span class="badge bg-dark-blue rounded-pill ms-2">@Model.UserItemList.Count</span>
                </div>
            </a>
        </li>
        <li class="nav-item" role="presentation">
            <a href="/Project/GetProject/@Model.ProjectId#tre" class="nav-link text-dark">
                <div class="d-flex justify-content-between align-items-center">
                    <span>TREs</span>
                    <span class="badge bg-dark-blue rounded-pill ms-2">@Model.TreItemList.Count</span>
                </div>
            </a>
        </li>
