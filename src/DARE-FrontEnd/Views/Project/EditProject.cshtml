@using BL.Models.DTO
@model ProjectUserEndpoint
@{
    ViewData["Title"] = "Edit @Model.Name";
}

<div class="container-lg mt-4 p-4 bg-white border-1 shadow-sm">

    <div class="d-flex align-items-center justify-content-between">
        <div>
            <h1 class="fs-3 mb-0">@Model.Name</h1>
            <p class="text-muted small mb-0">#@Model.Id</p>
        </div>
        <a href="@Url.Action("GetProject", "Project", new { id = Model.Id })" class="btn btn-link">
            <span>Cancel</span>
        </a>
    </div>
    <div class="mt-4">
        <ul class="nav nav-underline border-bottom" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <a href="#home-tab" class="nav-link text-dark active" id="home-tab" data-bs-toggle="tab" data-bs-target="#project" role="tab" aria-controls="Project" aria-selected="true">About</a>
            </li>
            <li class="nav-item" role="presentation">
                <a href="#submissions-tab" class="nav-link text-dark" id="submissions-tab" data-bs-toggle="tab" data-bs-target="#submissions" role="tab" aria-controls="submissions" aria-selected="false">
                    <div class="d-flex justify-content-between align-items-center">
                        <span>Submissions</span>
                        <span class="badge bg-dark-blue rounded-pill ms-2">x</span>
                    </div>
                </a>
            </li>
            <li class="nav-item" role="presentation">
                <a href="#profile-tab" class="nav-link text-dark" id="profile-tab" data-bs-toggle="tab" data-bs-target="#userMembership" role="tab" aria-controls="User Membership" aria-selected="false">
                    <div class="d-flex justify-content-between align-items-center">
                        <span>People</span>
                        <span class="badge bg-dark-blue rounded-pill ms-2">@Model.Users.Count</span>
                    </div>
                </a>
            </li>
            <li class="nav-item" role="presentation">
                <a href="#contact-tab" class="nav-link text-dark" id="contact-tab" data-bs-toggle="tab" data-bs-target="#endpoint" role="tab" aria-controls="Endpoint" aria-selected="false">
                    <div class="d-flex justify-content-between align-items-center">
                        <span>TREs</span>
                        <span class="badge bg-dark-blue rounded-pill ms-2">@Model.Endpoints.Count</span>
                    </div>
                </a>
            </li>
        </ul>


        <div class="tab-content py-5" id="myTabContent">
            <div class="tab-pane fade show active" id="project" role="tabpanel" aria-labelledby="home-tab">
                <div class="row">
                    <div class="col-md-6">
                        <form method="post" asp-action="Edit">
                            <div asp-validation-summary="All"></div>
                            <input asp-for="Id" hidden />
                            <div class="form-group mb-4">
                                <label asp-for="Name">Project Name</label>
                                <input asp-for="Name" class="form-control form-control-md" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-4">
                                <label asp-for="StartDate">Start Date</label>
                                <input asp-for="StartDate" class="form-control form-control-md" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-4">
                                <label asp-for="EndDate">End Date</label>
                                <input asp-for="EndDate" class="form-control form-control-md" />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                            <div class="mt-5 d-flex align-items-center">
                                <button type="submit" class="btn btn-md btn-primary mr-2">Save</button>
                                <a href="@Url.Action("GetProject", "Project", new { id = Model.Id })" class="btn btn-link">
                                    Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="submissions" role="tabpanel" aria-labelledby="submissions-tab">
                <div class="mt-2 mb-2">
                    <button type="button" class="btn btn-primary" id="addSubmission">Add Submission</button>
                </div>
                <p>Details of where bucket repository is...</p>

            </div>
            <div class="tab-pane fade" id="userMembership" role="tabpanel" aria-labelledby="profile-tab">
                <div class="mt-2 mb-2">
                    <button type="button" class="btn btn-primary" id="addUser">Add Person</button>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                @foreach (var user in Model.Users)
                                {
                                    <tr>
                                        <td>
                                            @user.Name
                                        </td>
                                        <td>
                                            <a href="@Url.Action("RemoveUserFromProject", "Project",new{ProjectId=Model.Id,UserId=@user.Id})"
                                               class="g-text-underline--none--hover">
                                                <h5 class="g-font-size-18 g-font-size-22--md g-color-black"><span class="g-color-black" style="word-break: break-word;">Remove</span></h5>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>

            </div>
            <div class="tab-pane fade" id="endpoint" role="tabpanel" aria-labelledby="contact-tab">
                <div class="mt-2 mb-2">
                    <button type="button" class="btn btn-primary" id="addEndpint">Add TRE</button>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                @foreach (var endpoint in Model.Endpoints)
                                {
                                    <tr>
                                        <td>
                                            @endpoint.Name
                                        </td>
                                        <td>
                                            <a href="@Url.Action("RemoveEndFromProject", "Project",new{ProjectId=Model.Id,EndpointId=@endpoint.Id})"
                                               class="g-text-underline--none--hover">
                                                <h5 class="g-font-size-18 g-font-size-22--md g-color-black"><span class="g-color-black" style="word-break: break-word;">Remove</span></h5>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade bd-user-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="userModal">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Add User</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="UserList">
                                    @foreach (var user in Model.UserItemList)
                                    {
                                        <tr>
                                            <td><input type="checkbox" value="@user.Value" id="@user.Value" name="selectedUser" /></td>
                                            <td>@user.Text</td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="SaveUserList(@Model.Id)">Add</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade bd-endpoint-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="endpointModal">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Add Endpoint</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="EndpointList">
                                    @foreach (var endpoint in Model.EndpointItemList)
                                    {
                                        <tr>
                                            <td><input type="checkbox" value="@endpoint.Value" id="Endpoint_@endpoint.Value" name="selectedEndpoint" /></td>
                                            <td>@endpoint.Text</td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="SaveEndpointList(@Model.Id)">Add</button>
                </div>
            </div>
        </div>
    </div>
</div>