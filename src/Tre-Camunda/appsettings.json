{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "SeqServerUrl": "http://localhost:5341",
    "SeqApiKey": "",
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore.Model.Validation": "Error",
        "System": "Warning",
        "Hangfire": "Warning"
      }
    }
  },
  "ZeebeBootstrap": {
    "Client": {
      "GatewayAddress": "127.0.0.1:26500"
    },
    "Worker": {
      "MaxJobsActive": 5,
      "TimeoutInMilliseconds": 500,
      "PollIntervalInMilliseconds": 50,
      "PollingTimeoutInMilliseconds": 1000,
      "RetryTimeoutInMilliseconds": 1000
    }
  },
  "LdapSettings": {
    "Host": "localhost", //ldap.camundaephemeral.local
    "Port": 1389,
    "AdminDn": "cn=admin,dc=camundaephemeral,dc=local",
    "AdminPassword": "admin",
    "BaseDn": "dc=camundaephemeral,dc=local",
    "UserOu": "ou=Users",
    "UseSSL": false
  },
  "CredentialSettings": {
    "UserExpirationPeriod": "PT1M" 
    // "PT1H"   = 1 hour
    // "PT30M"  = 30 minutes    
    // "PT60S"  = 60 seconds 
  }
}

