@{
    ViewData["Title"] = "Project";
}

@model BL.Models.ProjectApproval
<div class="row">
    <div class="col-sm-12">
        <h1>Add Project</h1>





        @using (Html.BeginForm("AddProject", "Project", FormMethod.Post, new { id = "frmMain" }))
        {
            @Html.AntiForgeryToken()



            <div class="form-group">
                @{
                    @Html.LabelFor(m => m.ProjectName, "Enter project name")
                    @Html.TextBoxFor(m => m.ProjectName, new {@class = "form-control show-tick noBottomMargin"})

                }

                @*  @Html.ValidationMessageFor(m => m.ProjectId, "Select Project")*@

            </div>

            <div class="form-group">
                @{
                    @Html.LabelFor(m => m.UserId, "Enter user name")
                    @Html.TextBoxFor(m => m.UserId, new {@class = "form-control show-tick noBottomMargin"})

                }


            </div>
            <div class="form-group">
                @{
                    @Html.LabelFor(m => m.StartDate, "Enter date format dd-mm-yyyy")
                    @Html.TextBoxFor(m => m.StartDate, new {@class = "form-control show-tick noBottomMargin"})

                }


            </div>


